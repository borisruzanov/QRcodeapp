<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/sixtyDpMargin"
                android:text="@string/next_text"
                android:textSize="@dimen/xlargeText"
                android:id="@+id/next_step_btn"
                android:textAllCaps="true"
                />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coupon_wrapper_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/eightDpMargin"
            android:background="@color/dark_gray"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/background_color_layout"
                android:gravity="center_vertical"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/background_color_edit_hint"
                    android:text="@string/coupon_set_background_color_hint"
                    android:gravity="center_vertical"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/largeText"
                    android:textStyle="bold" />

<!--                <RelativeLayout-->
<!--                    android:layout_width="55dp"-->
<!--                    android:layout_height="55dp">-->

<!--                    <com.airbnb.lottie.LottieAnimationView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                         app:lottie_rawRes="@raw/muzli"-->
<!--                        app:lottie_loop="true"-->
<!--                        app:lottie_autoPlay="true"-->
<!--                        android:elevation="2dp"-->
<!--                        android:layout_centerInParent="true"-->
<!--                        />-->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/background_color_edit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/edit"
                        />
<!--                </RelativeLayout>-->

            </LinearLayout>



            <LinearLayout
                android:id="@+id/zero_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/eightDpMargin"
                android:layout_marginLeft="@dimen/eightDpMargin"
                android:layout_marginEnd="@dimen/eightDpMargin"
                android:layout_marginRight="@dimen/eightDpMargin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/background_color_layout">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/coupon_company_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/coupon_set_title_hint"
                    android:gravity="center_vertical"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/largeText"
                    android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/company_name_edit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/defaultDpMargin"
                        android:layout_marginLeft="@dimen/defaultDpMargin"
                        android:src="@drawable/edit" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/parent_wrapper_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/zero_layout">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/coupon_design_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/defaultDpMargin"
                    android:background="@color/white"
                    android:elevation="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/header_image_edit_layout"
                        android:elevation="2dp"
                        android:gravity="center_vertical"
                        >
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/header_image_edit_hint"
                            android:text="@string/coupon_banner_size_hint"
                            android:gravity="center_vertical"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/largeText"
                            android:textStyle="bold" />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/header_image_edit_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/defaultDpMargin"
                            android:src="@drawable/edit"
                             />
                    </LinearLayout>



<!--                    <com.google.android.material.textview.MaterialTextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginStart="@dimen/defaultDpMargin"-->
<!--                        android:layout_marginLeft="@dimen/defaultDpMargin"-->
<!--                        android:layout_marginBottom="@dimen/sixtyDpMargin"-->
<!--                        android:text="Header Image size 640x360"-->
<!--                        app:layout_constraintStart_toStartOf="parent"-->
<!--                        app:layout_constraintTop_toBottomOf="@id/coupon_sale_image" />-->

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/coupon_sale_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/placeholder"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coupon_set_tag_hint"
                        android:id="@+id/sale_badge_hint"
                        android:textColor="@color/light_gray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/sale_badge_wrapper_layout"
                        android:layout_marginEnd="@dimen/sixtyDpMargin"
                        android:layout_marginRight="@dimen/sixtyDpMargin"
                        />

                    <LinearLayout
                        android:id="@+id/sale_badge_wrapper_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/sixtyDpMargin"
                        android:layout_marginRight="@dimen/sixtyDpMargin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@id/coupon_content_wrapper_layout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/coupon_sale_image">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/coupon_sale_badge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="0dp"
                            android:layout_weight="1"
                            android:background="@color/gray"
                            android:elevation="8dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/mediumText"
                            android:textStyle="bold"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/sale_badge_edit_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/defaultDpMargin"
                            android:layout_marginLeft="@dimen/defaultDpMargin"
                            android:src="@drawable/edit" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/coupon_content_wrapper_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/coupon_sale_image">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/thirtyTwoDpMargin"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal"
                            >

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/coupon_content_headline"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="@string/coupon_set_offer_title_hint"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/largeText" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/headline_text_edit_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/defaultDpMargin"
                                android:layout_marginLeft="@dimen/defaultDpMargin"
                                android:src="@drawable/edit" />

                        </LinearLayout>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/coupon_content_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eightDpMargin"
                            android:text="@string/coupon_set_offer_description_hint"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/mediumText"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_gravity="center_horizontal"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/description_text_edit_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/edit" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/get_coupon_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sixtyDpMargin"
                            android:background="@color/gray"
                            android:text=""
                            android:textColor="@color/white"
                            android:clickable="false"
                            android:textSize="@dimen/largeText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="@dimen/sixtyDpMargin"
                        android:gravity="center_vertical"
                        >
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/coupon_get_coupon_button_text_hint"
                            android:gravity="center_vertical"
                            android:id="@+id/get_coupon_edit_hint"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:textColor="@color/light_gray"
                            android:layout_marginRight="@dimen/defaultDpMargin"
                            android:layout_marginEnd="@dimen/defaultDpMargin"
                            android:textSize="@dimen/largeText"
                            android:textStyle="bold" />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/get_coupon_edit_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edit"
                            />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/coupon_next_design_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/defaultDpMargin"
                    android:background="@color/white"
                    android:elevation="8dp"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/coupon_code_layout_close_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_close"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/coupon_code_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixtyDpMargin"
                        android:text="@string/coupon_code_heading_text"
                        android:textSize="@dimen/largeText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/coupon_code_layout_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixtyDpMargin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/coupon_code_heading">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/coupon_code_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="@string/coupon_set_coupon_code_hint"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/xlargeText" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/coupon_code_edit_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/defaultDpMargin"
                            android:layout_marginLeft="@dimen/defaultDpMargin"
                            android:src="@drawable/edit" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/coupon_valid_date_layout_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/thirtyTwoDpMargin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/coupon_code_layout_wrapper">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_time" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/defaultDpMargin"
                                android:layout_marginLeft="@dimen/defaultDpMargin"
                                android:text="@string/coupon_valid_till_text"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/mediumText" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginStart="@dimen/defaultDpMargin"
                            >
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/coupon_valid_till_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/coupon_set_valid_date_hint"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/mediumText" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/coupon_valid_till_edit_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/defaultDpMargin"
                                android:src="@drawable/edit" />
                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/coupon_terms_conditions_layout_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/thirtyTwoDpMargin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/coupon_valid_date_layout_wrapper">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/coupon_terms_condition"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:textColor="@color/dark_gray"
                            android:text="@string/coupon_set_terms_condition_hint" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/coupon_terms_condition_edit_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/defaultDpMargin"
                            android:layout_marginLeft="@dimen/defaultDpMargin"
                            android:src="@drawable/edit" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/redeem_now_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/thirtyTwoDpMargin"
                        android:background="@color/dark_gray"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/largeText"
                        android:clickable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/coupon_terms_conditions_layout_wrapper" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="@dimen/eightDpMargin"
                        android:elevation="2dp"
                        >
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/redeem_now_edit_hint"
                            android:text="@string/coupon_set_redeem_button_hint"
                            android:gravity="center_vertical"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/largeText"
                            android:textStyle="bold" />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/redeem_now_edit_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edit"
                            />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/terms_condition_display_wrapper_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/thirtyTwoDpMargin"
                    android:layout_marginLeft="@dimen/thirtyTwoDpMargin"
                    android:layout_marginEnd="@dimen/thirtyTwoDpMargin"
                    android:layout_marginRight="@dimen/thirtyTwoDpMargin"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/coupon_next_design_layout">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_conditions"
                        android:textColor="@color/white"
                        android:textSize="@dimen/largeText"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/coupon_terms_condition_display_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coupon_terms_condition_display_hint"
                        android:textColor="@color/white"
                        android:textSize="@dimen/smallText" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/defaultDpMargin"
                android:layout_marginBottom="@dimen/thirtyTwoDpMargin"
                android:text="@string/back_text"
                android:textColor="@color/white"
                android:drawableStart="@drawable/ic_back_arrow"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:textSize="@dimen/largeText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/parent_wrapper_layout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/next_btn"
                android:gravity="center_horizontal"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/coupon_user_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultDpMargin"
                    android:text="@string/coupon_user_hint_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/smallText"
                    android:textStyle="bold"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultDpMargin"
